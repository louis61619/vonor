{
  "name": "root",
  "packageManager": "pnpm",
  "engines": {
    "node": ">= 16"
  },
  "private": true,
  "devDependencies": {
    "commitizen": "^4.2.4",
    "cz-lerna-changelog": "^2.0.3",
    "lerna": "^4.0.0"
  },
  "scripts": {
    "commit": "cz",
    "admin:dev": "pnpm run -C docs dev",
    "docs:dev": "pnpm run -C docs dev"
  },
  "workspaces": [
    "packages/*",
    "docs",
    "example"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
