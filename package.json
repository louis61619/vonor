{
  "name": "root",
  "private": true,
  "devDependencies": {
    "commitizen": "^4.2.4",
    "cz-lerna-changelog": "^2.0.3",
    "lerna": "^4.0.0"
  },
  "scripts": {
    "commit": "cz",
    "serve": "lerna run serve --scope=@vonor/admin",
    "docs:dev": "lerna run docs:dev --scope=@vonor/docs"
  },
  "workspaces": [
    "packages/*",
    "docs",
    "example"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
